# EditorConfig for Scramble
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.vala]
indent_style = space
indent_size = 4

[*.blp]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{xml,xml.in}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[meson.build]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
